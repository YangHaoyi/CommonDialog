<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fmContent">


    <LinearLayout
        android:layout_width="752dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_common_dialog">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="34dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:gravity="center"
                android:visibility="visible"
                android:text="Clear home address?"
                android:textColor="@color/common_title_color"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="204dp"
                android:visibility="visible"
                android:text="Clear home address?"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:textColor="@color/common_title_color"
                android:textSize="32dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_btn_bottom"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_btn_two"
                android:layout_width="296dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLeftButton"
                    android:background="@drawable/bg_common_dialog_left_button"
                    android:layout_width="296dp"
                    android:layout_height="72dp"
                    android:text="Change"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/common_title_color"
                    android:textSize="28dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_btn_one"
                android:layout_width="296dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="32dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvRightButton"
                    android:background="@drawable/bg_shape_corner_route_btn_selector"
                    android:layout_width="296dp"
                    android:layout_height="72dp"
                    android:text="Use Now"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="#F5F6FF"
                    android:textSize="28dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>





</FrameLayout>